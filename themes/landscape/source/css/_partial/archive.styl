.archives-wrap
  margin: block-margin 0

.archives
  clearfix()

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption
  color: #42b983

.archives
  display: flex
  flex-wrap: wrap

.archive-article
  box-sizing: border-box
  width 100%
  @media mq-middle
    width 33.3%
    padding-right: 15px 

.archive-article-inner
  @extend $block
  position relative
  display: block
  width 100%
  margin-bottom: 15px
  padding: 12px 18px
  border none
  outline: none
  text-align: left
  cursor: pointer
  transition: 0.25s
  &:hover
    top: -1px
    left: -1px
    box-shadow: 1px 1px 8px #ddd
    .archive-article-title
      color: #42b983

.archive-article-title
  text-decoration: none
  font-size: 18px 
  font-weight: bold
  color: color-default
  transition: color 0.2s
  line-height: line-height
  

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: color-grey
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 0.5em
  display: block

#page-nav
  clearfix()
  position: relative
  margin: 0 auto 30px auto
  text-align: center
  color: color-grey

  a, span
    display block
    padding: 10px 20px
    line-height: 20px
    font-size 16px

  a
    color: #6b8793
    text-decoration: none
    &:hover
      color: #42b983
  
  .prev
    font-weight bold
    position absolute
    letter-spacing 5px
    top: -2px
    left: 0px
    &:before
      content: "\f0d9"
      font-family: FontAwesome
      font-size 18px
      margin-right: 4px 
    
  .next
    font-weight bold
    position absolute
    letter-spacing 5px
    top: -2px
    right: 0px
    &:after
      content: "\f0da"
      font-family: FontAwesome
      font-size 18px
      margin-left: 4px 
    
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: bold
  .space
    color: color-border