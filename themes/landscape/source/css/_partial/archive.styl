.archive-tag-list
  .tag-list
    display: flex
    flex-wrap: wrap
    justify-content: center
    max-width: 800px
    margin: 50px auto 0 

    .tag-list-item
      margin-right: 10px

    .tag-list-link
      display block
      color: #6B8793
      padding 4px 8px
      margin 4px 0
      border-radius: 6px
      font-size 14px
      line-height 18px
      text-decoration: none
      background-color #E8EFF2
      transition: 0.2s
      cursor pointer
      box-shadow: 1px 1px 6px #999
      &:before
        content:"#"
      &:hover 
        background: #42b983
        color: #fff
        box-shadow: none
        box-shadow: 1px 1px 3px #359368 inset
      &.active
        background: #42b983
        color: #fff
        cursor: default
        box-shadow: 1px 1px 3px #359368 inset


.archives-wrap
  margin: block-margin 0

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption
  color: #555

.archives
  display: flex
  flex-wrap: wrap

.archive-article
  box-sizing: border-box
  width 100%
  @media mq-middle
    width 33.3%
    padding-right: 15px 

.archive-article-inner
  @extend $block
  position relative
  display: block
  width 100%
  margin-bottom: 15px
  padding: 12px 18px
  border none
  outline: none
  text-align: left
  cursor: pointer
  transition: 0.25s
  &:hover
    top: -1px
    left: -1px
    @extend $base-shadow
    .archive-article-title
      color: #42b983

.archive-article-title
  font-family: font-serif
  display: block
  width: 100%
  text-decoration: none
  font-size: 18px 
  font-weight: bold
  color: color-default
  transition: color 0.2s
  line-height: line-height
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: color-grey
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  letter-spacing: 0.5px;
  margin-bottom: 0.5em
  display: block

#page-nav
  clearfix()
  position: relative
  margin: 0 auto 30px auto
  text-align: center
  color: color-grey

  a, span
    display block
    padding: 10px 20px
    line-height: 20px
    font-size 16px

  a
    color: #6b8793
    text-decoration: none
    &:hover
      color: #42b983
  
  .prev
    font-weight bold
    position absolute
    letter-spacing 5px
    top: -2px
    left: 0px
    &:before
      content: "\f0d9"
      font-family: FontAwesome
      font-size 18px
      margin-right: 4px 
    
  .next
    font-weight bold
    position absolute
    letter-spacing 5px
    top: -2px
    right: 0px
    &:after
      content: "\f0da"
      font-family: FontAwesome
      font-size 18px
      margin-left: 4px 
    
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: bold
  .space
    color: color-border