#notFound
  display: flex
  justify-content: center
  align-items: center
  min-height: 500px
  &:before
    content: "404"
    display: block
    position absolute
    top: 50%
    left: 50%
    z-index: -1 
    transform: translate(-50%,-50%)
    font-size: 400px 
    font-family: Arial, sans-serif;
    color: #ddd

  h3
    font-size 50px
    font-weight bold
    text-align center
    margin-bottom: 20px
    color: #333

  p
    font-size 16px
    text-align center
    color: #555

  a
    display: block
    width: 80px
    margin: 15px auto 0
    padding 3px 0
    text-align center
    cursor: pointer
    border: 1px solid #dddddd
    border-radius: 4px
    outline: none
    font-size 14px
    text-decoration none
    background #e8eff2
    color: #6b8793
    transition: 0.3s
    &:hover 
      border: 1px solid transparent
      background: #42b983
      color: #fff