// https://github.com/chriskempson/tomorrow-theme
highlight-background = rgb(41, 42, 43)
highlight-current-line = #393939
highlight-selection = #515151
highlight-foreground = #cccccc
highlight-comment = #999999
highlight-red = #f2777a
highlight-orange = #f99157
highlight-yellow = #ffcc66
highlight-green = #99cc99
highlight-aqua = #66cccc
highlight-blue = #6699cc
highlight-purple = #cc99cc

$code-block
  background: highlight-background
  margin: 16px 0 0 0 
  padding: 15px 25px
  // border-style: solid
  // border-color: color-border
  // border-width: 1px 0
  border-radius: 4px
  overflow: auto
  color: highlight-foreground
  font-size: 14px 
  line-height: 22px

$line-numbers
  color: #666
  font-size: 0.85em

.article-entry
  pre, code
    white-space: pre-wrap
    word-break: break-all
    font-family: font-mono
  code
    color: #c7254e
  code
    background: #fff1f4
    text-shadow: 0 1px #fff
    padding: 0 0.3em
    border-radius: 4px
  pre
    @extend $code-block
    code
      background: none
      text-shadow: none
      padding: 0
      color: #e6e1dc
  .highlight
    @extend $code-block
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      width: 100%
    td
      border: none
      padding: 0
    tr
      display: flex
    figcaption
      clearfix()
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      a
        float: right
    .gutter 
      padding: 0 
    .gutter pre
      @extend $line-numbers
      text-align: left
      padding-right: 20px
    .line
      height: font-size * line-height
    .line.marked
      background: highlight-selection
  .gist
    margin: 0 article-padding * -1
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    background: highlight-background
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0
        padding: 0
        border: none
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline

pre
  .comment
  .title
    color: highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: highlight-green
  .css .hexcolor
    color: highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: highlight-blue
  .keyword
  .javascript .function
    color: highlight-purple

  .javascript.hljs 
    color: #e6e1dc

  .hljs-function
    color: rgb(156, 220, 254)

  .hljs-params
    color: rgb(156, 220, 254)

  .hljs-string
    color: rgb(206, 145, 120)

  .hljs-comment
    color: #69838b

  .hljs-title
    color: #d7ba7d

  .hljs-literal, .hljs-keyword
    color: #c586c0
